<table style="width:600px;margin-top:0;margin-right:auto;margin-bottom:0;margin-left:auto;padding-top:40px;padding-right:20px;padding-bottom:40px;padding-left:20px;color:#333332;line-height:1.4;font-size:16px;font-weight:300;font-family:&quot;jaf-bernino-sans&quot;,&quot;Helvetica Neue&quot;,Helvetica,Lucida Grande,&quot;Lucida Sans Unicode&quot;,&quot;Lucida Sans&quot;,Geneva,Verdana,sans-serif">
  <tbody>
    <tr>
      <td>
        <img src="http://alpha.slyp.io/assets/1439796153883/images/slyp-logo-small.png" alt="Slyp Logo" style="max-width:50px;display:block;margin-top:0;margin-right:auto;margin-bottom:0;margin-left:auto" class="CToWUd">
        <div>
          <h2 style="font-size:18px;font-weight:300;line-height:1.4;text-align:center;margin-top:5px;margin-bottom:20px">
            <a href="<%= @link %>" target="_blank">Slyp Daily Digest</a>
          </h2>
          <hr style="width:50px;border:0;border-bottom:1px solid #e5e5e5;margin-top:20px;margin-bottom:35px">
          <div style="text-align:center!important;margin-bottom:15px"></div>
          <div style="font-weight:700!important;text-align:center;font-family:&quot;jaf-bernino-sans&quot;,&quot;Helvetica Neue&quot;,Helvetica,Lucida Grande,&quot;Lucida Sans Unicode&quot;,&quot;Lucida Sans&quot;,Geneva,Verdana,sans-serif;font-size:14px;line-height:18px;margin-bottom:0;letter-spacing:1px;text-transform:uppercase">Today's Slyps</div>

          <div style="margin-top:15px;margin-right:0;margin-bottom:30px;margin-left:0;padding-top:0;border-top:1px solid #e5e5e5;border:0">
            <div style="min-height:130px;padding-bottom:10px;border-bottom:1px solid #e5e5e5">
              <a href="<%= @main_slyp.raw_url %>" style="color:#333332;text-decoration:none" target="_blank">
                <img src="<%= @main_slyp.top_image %>" class="CToWUd">
              </a>
              <h2 style="text-align:left!important;font-family:&quot;ff-tisa-web-pro&quot;,Georgia,Cambria,&quot;Times New Roman&quot;,Times,serif;font-size:32px;font-weight:300;line-height:36px;margin-bottom:0;margin-top:15px;margin-right:0;margin-left:0">
                <a href="<%= @main_slyp.raw_url %>" style="color:#333332;text-decoration:none" target="_blank"><%= @main_slyp.title %></a>
              </h2>
              <h4 style="text-align:left!important;font-weight:300;font-size:18px;line-height:24px;margin-top:10px;margin-right:0;margin-bottom:10px;margin-left:0">
                <a href="<%= @main_slyp.raw_url %>" style="color:#333332;text-decoration:none" target="_blank"><%= @main_slyp.site_name %></a>
              </h4>
              <p style="margin-top:5px;margin-bottom:5px;font-size:14px;line-height:20px;margin-right:0;margin-left:0">
                <a href="<%= @main_slyp.raw_url %>" style="color:#333332;text-decoration:none" target="_blank"><%= @main_slyp.summary %></a>
              </p>
              <div style="color:#8e8e8e;margin-top:10px">
                <div style="margin-bottom:10px;padding-bottom:10px;font-size:12px"><a href="<%= @main_slyp.raw_url %>" style="color:#58ad69;text-decoration:none" target="_blank"><%= @main_slyp.author %></a></div>
              </div>
            </div>
            <% @slyps.each do |item| %>
              <div style="min-height:130px;padding-bottom:10px;border-bottom:1px solid #e5e5e5">
                <a href="<%= item.raw_url %>" target="_blank">
                  <img src="<%= item.top_image %>" style="border:1px solid #e5e5e5;float:right;margin-left:7px;max-width: 160px;width: 100%;" class="CToWUd">
                </a>
                <h2 style="text-align:left!important;font-family:&quot;ff-tisa-web-pro&quot;,Georgia,Cambria,&quot;Times New Roman&quot;,Times,serif;font-size:22px;font-weight:300;line-height:26px;margin-bottom:0;margin-top:15px;margin-right:0;margin-left:0">
                  <a href="<%= item.raw_url %>" style="color:#333332;text-decoration:none" target="_blank"><%= item.title %></a>
                </h2>
                <h4 style="text-align:left!important;font-weight:300;font-size:14px;line-height:20px;margin-top:5px;margin-right:0;margin-bottom:5px;margin-left:0">
                  <a href="<%= item.raw_url %>" style="color:#333332;text-decoration:none" target="_blank"><%= item.summary %></a>
                </h4>
                <div style="color:#8e8e8e;margin-top:10px">
                  <div style="margin-bottom:10px;padding-bottom:10px;font-size:12px"><a href="<%= item.site_name %>" style="color:#58ad69;text-decoration:none" target="_blank"><%= item.site_name %></a></div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <tr>
          <td class="button" style="font-family:Arial,Helvetica,sans-serif;font-size:16px;vertical-align:middle;padding:0;text-align:center;display:block;background-color:#109fc7;height:48px;width:205px;border-radius:4px;"><a href="<%= @link %>" class="button" style="color:#ffffff;text-decoration:none;line-height:48px;display:inline-block;" target="_blank"><span>Go to your account</span></a>
          </td>
        </tr>
      </td>
    </tr>
  </tbody>
</table>



